@model IEnumerable<FrontEnd.Models.Ingresos>

@{
    ViewData["Title"] = "Ingresos";
}
@section Styles
{
    <link href="~/css/vendor/dataTables.bootstrap5.css" rel="stylesheet" />
    <link href="~/css/vendor/responsive.bootstrap5.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
            </div>
            <h4 class="page-title">Ingresos</h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-sm-4">
                        <a asp-action="Create" class="btn btn-danger mb-2 add"><i class="mdi mdi-plus-circle me-2"></i> Agregar</a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table" id="tbIngresos">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Categoria)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Monto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Fecha)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="text-body">@Html.DisplayFor(modelItem => item.Nombre)</a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Categoria.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Monto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fecha)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="action-icon"><i class="mdi mdi-square-edit-outline"></i> </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="action-icon"> <i class="mdi mdi-delete"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/js/vendor/jquery.dataTables.min.js"></script>
    <script src="~/js/vendor/dataTables.bootstrap5.js"></script>
    <script src="~/js/vendor/dataTables.responsive.min.js"></script>
    <script src="~/js/vendor/responsive.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#tbIngresos').DataTable({
                'language': {
                    url: "~/lib/spanish.txt",
                }
            });
        })
    </script>
}
